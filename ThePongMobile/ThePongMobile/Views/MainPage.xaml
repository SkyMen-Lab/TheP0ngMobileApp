<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:material="clr-namespace:XF.Material.Forms.UI;assembly=XF.Material"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local1="clr-namespace:ThePongMobile.MarkUpExtentions"
             x:Class="ThePongMobile.MainPage"
             material:MaterialNavigationPage.AppBarColor="#33264F"
             NavigationPage.HasBackButton="False">
    <ContentPage.ToolbarItems>
        <ToolbarItem 
            IconImageSource="{local1:EmbeddedImages ID=ThePongMobile.Images.backIcon.png}"
            Command="{Binding Back}">
        </ToolbarItem>
    </ContentPage.ToolbarItems>
    <Grid ColumnSpacing="0" RowSpacing="0" BackgroundColor="#33264F">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <material:MaterialButton
                ImageSource="{local1:EmbeddedImages ID=ThePongMobile.Images.upArrow.png}"
                Command="{Binding Move}"
                Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                BackgroundColor="#A0499D" >
        <material:MaterialButton.CommandParameter>
            <x:Int32>
                1
            </x:Int32>
        </material:MaterialButton.CommandParameter>
            </material:MaterialButton>
                <material:MaterialButton
                ImageSource="{local1:EmbeddedImages ID=ThePongMobile.Images.downArrow.png}"
                Command="{Binding Move}"
                Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                BackgroundColor="#A0499D">
            <material:MaterialButton.CommandParameter>
                <x:Int32>
                    0
                </x:Int32>
            </material:MaterialButton.CommandParameter>
        </material:MaterialButton>
    </Grid>
</ContentPage>
